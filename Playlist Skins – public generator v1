<body>
  <header>
    <h1>Playlist Skins</h1>
    <p>Turn any Spotify playlist into a retro boombox skin.</p>
  </header>

  <main>
    <!-- STEP 1: Playlist input -->
    <section class="panel">
      <h2>1. Drop your Spotify playlist</h2>
      <label for="playlistUrl">
        Spotify playlist URL
      </label>
      <input
        id="playlistUrl"
        type="text"
        placeholder="https://open.spotify.com/playlist/2MmIJTeFeehQ3uo1PFydLh"
      />
      <button id="applyBtn">Apply to boombox</button>
      <div class="hint">
        Paste a normal playlist link. We’ll turn it into the embed URL for you.
      </div>
    </section>

    <!-- STEP 2: Live preview -->
    <section class="panel">
      <h2>2. Preview your skin</h2>
      <div class="preview-wrapper">
        <div class="boombox-shell">
          <!-- Your skin art -->
          <img
            src="https://primary.jwwb.nl/public/g/u/b/temp-lwmvpgonevezulioxwug/untitled-design-high.png"
            alt="Playlist Skins Boombox"
          />
          <!-- Spotify iframe sits in the tuner window -->
          <div class="boombox-iframe-slot">
            <iframe
              id="playlistFrame"
              src="https://open.spotify.com/embed/playlist/2MmIJTeFeehQ3uo1PFydLh?utm_source=generator"
              allow="autoplay; clipboard-write; encrypted-media; picture-in-picture"
              loading="lazy"
            ></iframe>
          </div>
        </div>
        <div class="hint">
          If the player looks slightly off, you can tweak the <code>top</code>, <code>left</code>, <code>width</code>, or <code>height</code>
          values inside <code>.boombox-iframe-slot</code> in the CSS.
        </div>
      </div>
    </section>

    <!-- STEP 3: Copy-paste widget code -->
    <section class="panel">
      <div class="code-label-row">
        <span>3. Copy this HTML widget to use on your site</span>
        <button class="copy-btn" id="copyBtn">Copy code</button>
      </div>
      <textarea id="outputCode" readonly></textarea>
      <div class="hint">
        Paste this into any site that allows custom HTML (Webador, WordPress, etc).
      </div>
    </section>
  </main>

  <script>
    const input = document.getElementById('playlistUrl');
    const iframe = document.getElementById('playlistFrame');
    const output = document.getElementById('outputCode');
    const applyBtn = document.getElementById('applyBtn');
    const copyBtn = document.getElementById('copyBtn');

    // Default playlist (yours)
    const defaultPlaylist = 'https://open.spotify.com/playlist/2MmIJTeFeehQ3uo1PFydLh';

    function toEmbedUrl(rawUrl) {
      if (!rawUrl) return '';
      let url = rawUrl.trim();

      // If they pasted the /playlist/ form, convert it
      url = url.replace('open.spotify.com/playlist/', 'open.spotify.com/embed/playlist/');

      // Strip extra query params except ?utm_source=generator
      const qIndex = url.indexOf('?');
      if (qIndex !== -1) {
        url = url.substring(0, qIndex);
      }

      // Add generator tag for cleanliness
      if (!url.includes('/embed/playlist/')) return '';
      return url + '?utm_source=generator';
    }

    function buildEmbedCode(embedUrl) {
      return `<!-- Playlist Skins Boombox Widget -->
<div style="
  position:relative;
  width:900px;
  margin:40px auto;
">
  <img
    src="https://primary.jwwb.nl/public/g/u/b/temp-lwmvpgonevezulioxwug/untitled-design-high.png"
    alt="Playlist Skins Boombox"
    style="display:block;width:100%;border-radius:12px;"
  />
  <div style="
    position:absolute;
    top:128px;
    left:120px;
    width:660px;
    height:65px;
    overflow:hidden;
    border-radius:8px;
  ">
    <iframe
      src="${embedUrl}"
      width="100%"
      height="100%"
      frameborder="0"
      allow="autoplay; clipboard-write; encrypted-media; picture-in-picture"
      loading="lazy"
      style="background:transparent;"
    ></iframe>
  </div>
</div>`;
    }

    function applyPlaylist() {
      const raw = input.value || defaultPlaylist;
      const embedUrl = toEmbedUrl(raw);

      if (!embedUrl) {
        alert('That does not look like a valid Spotify playlist URL.');
        return;
      }

      iframe.src = embedUrl;
      output.value = buildEmbedCode(embedUrl);
    }

    function init() {
      input.value = defaultPlaylist;
      applyPlaylist();
    }

    applyBtn.addEventListener('click', applyPlaylist);

    copyBtn.addEventListener('click', () => {
      output.select();
      document.execCommand('copy');
    });

    init();
  </script>
</body>
</html>
